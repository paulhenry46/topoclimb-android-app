{
  "name": "Modern Android Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/java:latest": {
      "version": "17",
      "jdkDistro": "zulu",
      "installGradle": true
    }
  },
  "postCreateCommand": "sdkmanager --sdk_root=$ANDROID_HOME 'platform-tools' 'platforms;android-34' 'build-tools;34.0.0'",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "android-devtools.android-devtools"
      ]
    }
  }
}
